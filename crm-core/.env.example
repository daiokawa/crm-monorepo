DATABASE_URL="postgresql://crm_user:crm_password@localhost:5432/crm_dev"

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# 発注ID設定
# 先頭0を許可するかどうか（true: CHAR(8)型, false: INT UNSIGNED型）
ORDER_ID_ALLOW_LEADING_ZEROS=false

# 発注IDの桁数
ORDER_ID_LENGTH=8

# バリデーション設定
# 不正な発注IDを自動リジェクトするか
ORDER_VALIDATION_AUTO_REJECT=true

# バリデーションログの保存期間（日数）
ORDER_VALIDATION_LOG_RETENTION_DAYS=90

# インポート設定
# CSVインポート時のバッチサイズ
ORDER_IMPORT_BATCH_SIZE=100

# CSVの文字コード
ORDER_IMPORT_ENCODING=utf-8