{
  "name": "@crm/ops",
  "version": "0.1.0",
  "private": true,
  "description": "CRM Infrastructure and Operations",
  "scripts": {
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
